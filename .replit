modules = ["postgresql-16", "python-3.11", "python-3.12.2", "web"]
run = "python -m main.py"

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "imagemagick_light"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 39304867
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[ports]]
localPort = 5000
externalPort = 80
